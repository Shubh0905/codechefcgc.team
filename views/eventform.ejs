<%- include('./partials/header') %>

<div class="container">
	<div class="column">
		<h1 id="updatePage" style="text-align: center;">
			Add Upcoming Event
		</h1><hr>
		<form action="/upcoming_events" method="POST" class="eventform" style="margin: 60px auto;"> 
			<div class="form-group">
                <label for="name">Event Name</label>
                <input type="text"  class="form-control" id="name" name="eventname" placeholder="Event Name">
            </div>
            <div class="form-group">
                <label for="info">Event Info</label>
                <textarea type="text" class="form-control" id="info" name="eventinfo" ></textarea>
            </div>
            <div class="form-group">
                <label for="description">Event Description</label>
                <textarea type="text" class="form-control" id="description" name="description"></textarea>
            </div>
            <div class="form-group">
                <label for="image">Event Banner</label>
                <input type="text" class="form-control" id="image" name="image" placeholder="Event Image URL">
            </div>
            <button type="submit" class="btn btn-success btn-block">Add Event</button>
            <a href="/upcoming_events">Go Back</a>
		</form>	
	</div>
</div>

<%- include('./partials/footer') %>